{% for item in items %}
  <div class="footer-col links col-md-2 col-sm-4 col-xs-12">
    <div class="footer-col-inner">
      <h3 class="title">{{ item.title.title }}</h3>
      <ul class="list-unstyled" >
        {% for path in item %}
          {% if path.link is defined %}
            <li><a href="{{ path.link }}"><i class="{{ path.class }}"></i>{{ path.title }}</a></li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
{% endfor %}
